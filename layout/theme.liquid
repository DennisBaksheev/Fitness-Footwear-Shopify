    /*

   .feedback-modal { 
   position: fixed; 
   z-index: 1000; 
   left: 0; 
   top: 0; 
   width: 100%; 
   height: 100%; 
   overflow: auto; 
   background-color: rgba(0, 0, 0, 0.4); 
   display: flex; 
   justify-content: center; 
   align-items: center; 
   } 

   .feedback-modal-content { 
   background-color: #fefefe; 
   margin: auto; 
   padding: 20px; 
   border: 1px solid #888; 
   width: 80%; 
   max-width: 500px; 
   } 

   .feedback-rating label { 
   font-size: 2rem; 
   cursor: pointer; 
