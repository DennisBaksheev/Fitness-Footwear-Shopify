      }


      .menu {
        display: flex;
        justify-content: center;
        width: 100%;

        background-color: #09111D;
        color: white;
        padding: 12px 0;


      }

      .footer {
        width: 100%;
        height: 300px;
        background-color: green;
        margin-top: 30px;
      }

      .footer-top {
        display: flex;
        width: 100%;
        height: 150px;
        background-color: #F2F5F9;
        align-items: center;
        justify-content: center;
      }
      .footer-bottom {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        /* Align items at the start of the flex container */
        padding: 0 20px;
        height: 150px;
        background-color: #09111D;
        color: white;
      }

      .footer-section {
        display: flex;
        flex-direction: column;
        /* Stack the h2 and ul vertically */
        width: 20%;
        /* Adjust based on how much space you want each section to take */
        padding-top: 15px;
      }

      .footer-section h2 {
        margin-bottom: 10px;
        /* Add space between the h2 and ul */
        color: #f2f5f9;
        font-size: 14px;
      }
      .footer-section-slogan {
        display: inline-block;
        width: 35%;
        padding-left: 15px;
        padding-right: 15px;


      }


      .footer-section ul {
        list-style: none;
        padding: 0;
        margin: 0;

      }

      .footer-section ul li a {
        color: #cccccc;
        text-decoration: none;
        line-height: 1.5;
        display: block;
      }


      /*

   .search-container { 
   display: flex; 
   align-items: center; 
   position: relative; 
   flex-grow: 1; 
   } 
*/
      .search-container {
        position: relative;
        display: flex;
        align-items: center;
      }


      .menu-item {
        position: relative;
        /* Needed for absolute positioning of dropdown */
        margin: 0 20px;
        transition: transform 0.3s ease;
        z-index: 2000;
        justify-content: flex-start;
      }

      .margin-menu-items,
      .margin-menu-items-about {
        cursor: pointer;
        font-size: 14px;
        color: white;
        /* Ensures text color is consistent */
        padding: 24px 16px;
        text-decoration: none;
        display: block;
        text-align: left;
      }
      .menu-item:hover {
        transform: translateY(-1px);
        /* Moves the item up slightly on hover */
      }


      /* Consistent hover effect for all menu items */
      .margin-menu-items:hover,
      .margin-menu-items-about:hover {
        background-color: #007BFF;
        /* Example hover color */
        color: white;
        /* Ensures text color on hover is white */
      }

      .dropdown-content {
        display: none;
        position: absolute;
        background-color: #f9f9f9;
        min-width: 200px;
        box-shadow: 0 8px 16px 0 rgba(0, 0, 0, 0.2);
        color: black;
        z-index: 2001;
        padding: 5px 0;
      }

      .dropdown-content a {
        color: black;
        padding: 12px 16px;
        text-decoration: none;
        display: block;
        text-align: left;
        white-space: nowrap;
      }

      .dropdown-content a:hover {
        background-color: #ddd;
      }

      .search-box {
        display: none;
        width: 200px;
        padding: 8px;
        font-size: 16px;
        border-radius: 5px;
        border: 1px solid #ccc;
        position: absolute;
        top: 50%;
        right: 0;
        transform: translateX(100%) translateY(-50%);
      }

      .search-icon-btn {
        cursor: pointer;
        background: none;
        border: none;
        padding: 0;
        margin-right: 10px;
      }

      .search-box.active {
        display: block;

      }
      .search-icon-btn-img {

        display: block;
        /* Ensures the img element doesn't have extra space around it */
      }
      .website-logo-img {
        flex-grow: 0;
        /* Prevents the logo from stretching */
      }

      .logo-and-search {
        display: flex;
        align-items: center;
        flex-grow: 1;
        /* Allows this container to take up available space */
        justify-content: flex-start;
        /* Aligns children to the start of the container */
      }

      .menu,
      .footer {
        width: 100%;
        /* Ensures these elements do not exceed the viewport width */
      }
      .cart-icon-btn {
        background: none;
        border: none;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 0;
      }

      .cart-icon-btn-img {

        display: block;
        /* Ensures the img element doesn't have extra space around it */
      }
      .website-logo-img {
        width: 40px;
        /* Set the width of the icon */
        height: 40px;
        /* Set the height of the icon */
        display: block;
        /* Ensures the img element doesn't have extra space around it */
      }
      .circle {
        width: 30px;
        /* Width of the circle */
        height: 30px;
        /* Height must be the same as the width */
        border-radius: 50%;
        /* This percentage will create a full circle */
        background-color: #007BFF;
        /* Background color of the circle */
        display: flex;
        /* Ensures content inside is center-aligned (optional) */
        align-items: center;
        /* Vertical alignment (optional) */
        justify-content: center;
        /* Horizontal alignment (optional) */
        overflow: hidden;
        /* Ensures no content spills outside the circle (optional) */
        border: 2px solid #09111D;
        /* Optional border for the circle */
        margin-left: 75%;

      }
      .contact-footer {
        text-align: center;
      }


