            <!-- Submit button, can be hidden since the search icon is used to toggle -->
          <input type="submit" style="display: none;">
        </form>

      </div>
      <a href="/index">
        <img
          src="{{ 'logo.png' | asset_url }}"
          alt="website logo"
          class="website-logo-img"
          width="70px"
          height="50px">
      </a>
