    <div class="veryTop">
      <p>Free shipping on orders $100+</p>

    </div>
    <div id="banner">
      <div class="search-container">
        <form action="/search" method="get">
          <button
            type="button"
            class="search-icon-btn"
            onclick="toggleSearch(event)">
            <img
              src="{{ 'search.png' | asset_url }}"
              alt="search icon"
              class="search-icon-btn-img"
